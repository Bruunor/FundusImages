<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>WebSite</title>
        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/themes/base/css");
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body style="overflow:hidden; ">
        <div id="page">
            <div id="header">
                <p class="site-title">FundusWeb</p>
            </div>
            <div id="main">
                <div id="webServiceTarget">Here is some text for the webService to update.</div>

                <!-- Panel for fundus images -->
                <div id="imageBar">
                    <div id="imagePane">

                    </div>
                
                    <input type="file" id="files" accept="image/gif, image/jpeg, image/png, image/tiff, image/bmp" name="files[]" />
                    <button id="beginUploadButton">Begin Upload</button>
                </div>

                <div id="viewPane">
                    <canvas id="canvas" style="position:relative; left:0; right:0; top:0; bottom:0;"></canvas> 
                </div>

                <div id="menuPanel" style="background-color: brown; position:relative; top:0; bottom:0; left:200px; right:0">

                </div>

                <!-- Panel for action history buttons -->
                <div style="display:inline-block">
                    <button id="undoButton">Undo</button>
                    <button id="redoButton">Redo</button>
                    <button title="Resets the application to its original state" id="resetButton">Reset</button>
                </div>

                <div id="footer">
                    &copy; @DateTime.Now.Year - Web Site
                </div>
            </div>
            <div id="messageBox"></div>
        </div>
    </body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/page")
    <script>
        WebPage = new Page();
        WebPage.init();
    </script>
</html>